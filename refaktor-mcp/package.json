{
  "name": "@refaktor/mcp-server",
  "version": "0.1.0",
  "description": "MCP (Model Context Protocol) server for Refaktor - smart case-aware search and replace",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "refaktor-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write 'src/**/*.ts'",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "mcp",
    "refactoring",
    "search-replace",
    "code-transformation",
    "ai-tools"
  ],
  "author": "DocSpring",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "execa": "^8.0.1",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ]
}