---
import Default from '@astrojs/starlight/components/Footer.astro';
---

<Default {...Astro.props}>
  <div slot="after" class="docspring-footer">
    <hr style="margin: 2rem 0; border: none; border-top: 1px solid var(--sl-color-gray-5);" />
    <div style="text-align: center; padding: 1rem 0;">
      <strong>Refaktor is supported by <a href="https://docspring.com" style="color: var(--sl-color-text-accent);">DocSpring</a></strong>
      <br />
      <span style="color: var(--sl-color-gray-3); font-size: 0.875rem;">
        DocSpring is a powerful API for filling out and generating PDFs
      </span>
    </div>
  </div>
</Default>